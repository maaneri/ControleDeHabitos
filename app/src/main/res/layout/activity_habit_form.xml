<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/nomeInput"
            android:layout_width="382dp"
            android:layout_height="wrap_content"
            android:hint="@string/nome_do_h_bito"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/descricaoInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/descri_o"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top" />

        <CheckBox
            android:id="@+id/feitoHojeCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/feito_hoje" />

        <Button
            android:id="@+id/salvarButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/salvar_h_bito" />

    </LinearLayout>
</ScrollView>
